<?php
/**
 * @file
 * Code for the Stanford Page feature.
 */

include_once 'stanford_page.features.inc';

/**
 * Implements hook_preprocess().
 */
function stanford_page_preprocess_node(&$vars) {

  if ($vars["type"] == "stanford_page") {
    // If the view mode is not set to 'Full Page' because of display suite
    // view_mode switch override settings the title will show up double.
    if (module_exists("ds") && isset($vars["ds_switch"])) {
      $is_node_page = node_is_page($vars["node"]);
      if ($is_node_page) {
        $vars['page'] = TRUE;
      }
    }
  }

}
